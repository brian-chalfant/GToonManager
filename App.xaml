<Application x:Class="GToonManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GToonManager"
             xmlns:viewModels="clr-namespace:GToonManager.ViewModels"
             xmlns:controls="clr-namespace:GToonManager.Controls"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Theme Resource Dictionaries for switching -->
            <ResourceDictionary x:Key="LightTheme">
                <SolidColorBrush x:Key="MedievalBackground" Color="#F5E6C8"/>
                <SolidColorBrush x:Key="PrimaryGold" Color="#D4AF37"/>
                <SolidColorBrush x:Key="PrimaryRed" Color="#7B0A02"/>
                <SolidColorBrush x:Key="PanelBlue" Color="#1B2A41"/>
                <SolidColorBrush x:Key="DarkRed" Color="#4A0601"/>
                <SolidColorBrush x:Key="WindowBackground" Color="#F5E6C8"/>
                <SolidColorBrush x:Key="PanelBackground" Color="#F5E6C8"/>
                <SolidColorBrush x:Key="ControlBackground" Color="White"/>
                <SolidColorBrush x:Key="TextForeground" Color="#7B0A02"/>
            </ResourceDictionary>

            <ResourceDictionary x:Key="DarkTheme">
                <SolidColorBrush x:Key="MedievalBackground" Color="#1E1E1E"/>
                <SolidColorBrush x:Key="PrimaryGold" Color="#F5C842"/>
                <SolidColorBrush x:Key="PrimaryRed" Color="#C678DD"/>
                <SolidColorBrush x:Key="PanelBlue" Color="#333344"/>
                <SolidColorBrush x:Key="DarkRed" Color="#4A3A4A"/>
                <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E"/>
                <SolidColorBrush x:Key="PanelBackground" Color="#2D2D30"/>
                <SolidColorBrush x:Key="ControlBackground" Color="#3C3C3C"/>
                <SolidColorBrush x:Key="TextForeground" Color="#E5E5E5"/>
            </ResourceDictionary>

            <!-- Default active theme resources (Light by default) -->
            <!-- These will be dynamically updated by ThemeService -->
            <SolidColorBrush x:Key="MedievalBackground" Color="#F5E6C8"/>
            <SolidColorBrush x:Key="PrimaryGold" Color="#D4AF37"/>
            <SolidColorBrush x:Key="PrimaryRed" Color="#7B0A02"/>
            <SolidColorBrush x:Key="PanelBlue" Color="#1B2A41"/>
            <SolidColorBrush x:Key="DarkRed" Color="#4A0601"/>
            <SolidColorBrush x:Key="WindowBackground" Color="#F5E6C8"/>
            <SolidColorBrush x:Key="PanelBackground" Color="#F5E6C8"/>
            <SolidColorBrush x:Key="ControlBackground" Color="White"/>
            <SolidColorBrush x:Key="TextForeground" Color="#7B0A02"/>

            <!-- DataTemplate for AbilityScoreAssignmentViewModel -->
            <DataTemplate DataType="{x:Type viewModels:AbilityScoreAssignmentViewModel}">
                <controls:AbilityScoreAssignmentControl/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
