<UserControl x:Class="GToonManager.Controls.AbilityScoreAssignmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:GToonManager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:NullableIntToStringConverter x:Key="NullableIntToStringConverter"/>
    </UserControl.Resources>
    
    <StackPanel>
        <TextBlock Text="Assign Ability Scores" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- Class Recommendation Section -->
        <Border Background="#e3f2fd" BorderBrush="#2196f3" BorderThickness="1" Padding="15" Margin="0,0,0,20"
                Visibility="{Binding HasClassRecommendation, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel>
                <TextBlock Text="{Binding ClassRecommendationText}" FontWeight="Bold" Margin="0,0,0,10"/>
                <Button Content="Apply Class Recommendation" Command="{Binding ApplyClassRecommendationCommand}"
                        Background="#2196f3" Foreground="White" FontWeight="Bold"
                        Padding="15,8" BorderThickness="0"/>
            </StackPanel>
        </Border>
        
        <!-- Available Scores Display -->
        <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Available Scores:" FontWeight="Bold" Margin="0,0,0,10"/>
                <ItemsControl ItemsSource="{Binding AvailableScores}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#28a745" Margin="3" Padding="10,5">
                                <TextBlock Text="{Binding}" Foreground="White" FontWeight="Bold" FontSize="16"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock Text="All scores have been assigned" FontStyle="Italic" Foreground="Gray" 
                           Visibility="{Binding AvailableScores.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
            </StackPanel>
        </Border>
        
        <!-- Ability Score Assignment Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Column -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <!-- Strength -->
                <Border Background="White" BorderBrush="#ddd" BorderThickness="1" Margin="0,0,0,10" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Strength:" FontWeight="Bold" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding StrengthAvailableScores}" 
                                  SelectedItem="{Binding StrengthAssignment}" FontSize="16" Padding="10,5"/>
                    </Grid>
                </Border>
                
                <!-- Dexterity -->
                <Border Background="White" BorderBrush="#ddd" BorderThickness="1" Margin="0,0,0,10" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Dexterity:" FontWeight="Bold" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding DexterityAvailableScores}" 
                                  SelectedItem="{Binding DexterityAssignment}" FontSize="16" Padding="10,5"/>
                    </Grid>
                </Border>
                
                <!-- Constitution -->
                <Border Background="White" BorderBrush="#ddd" BorderThickness="1" Margin="0,0,0,10" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Constitution:" FontWeight="Bold" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding ConstitutionAvailableScores}" 
                                  SelectedItem="{Binding ConstitutionAssignment}" FontSize="16" Padding="10,5"/>
                    </Grid>
                </Border>
            </StackPanel>
            
            <!-- Right Column -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <!-- Intelligence -->
                <Border Background="White" BorderBrush="#ddd" BorderThickness="1" Margin="0,0,0,10" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Intelligence:" FontWeight="Bold" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding IntelligenceAvailableScores}" 
                                  SelectedItem="{Binding IntelligenceAssignment}" FontSize="16" Padding="10,5"/>
                    </Grid>
                </Border>
                
                <!-- Wisdom -->
                <Border Background="White" BorderBrush="#ddd" BorderThickness="1" Margin="0,0,0,10" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Wisdom:" FontWeight="Bold" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding WisdomAvailableScores}" 
                                  SelectedItem="{Binding WisdomAssignment}" FontSize="16" Padding="10,5"/>
                    </Grid>
                </Border>
                
                <!-- Charisma -->
                <Border Background="White" BorderBrush="#ddd" BorderThickness="1" Margin="0,0,0,10" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Charisma:" FontWeight="Bold" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding CharismaAvailableScores}" 
                                  SelectedItem="{Binding CharismaAssignment}" FontSize="16" Padding="10,5"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
        
        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Clear All" Command="{Binding ClearAssignmentsCommand}"
                    Background="#dc3545" Foreground="White" FontWeight="Bold"
                    Padding="15,8" Margin="0,0,10,0" BorderThickness="0"/>
        </StackPanel>
    </StackPanel>
</UserControl> 