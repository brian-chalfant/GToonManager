<UserControl x:Class="GToonManager.Controls.FreeEntryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Manual Entry" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,0,0,20"/>
        
        <!-- Preset Buttons -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="Set Defaults (All 10s)" Command="{Binding SetDefaultsCommand}"
                    Background="#6c757d" Foreground="White" Padding="15,8" Margin="0,0,10,0" BorderThickness="0"/>
            <Button Content="Set Elite Array" Command="{Binding SetEliteArrayCommand}"
                    Background="#28a745" Foreground="White" Padding="15,8" BorderThickness="0"/>
        </StackPanel>
        
        <!-- Ability Score Inputs -->
        <UniformGrid Columns="3" Rows="2">
            <StackPanel Margin="5">
                <TextBlock Text="Strength" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBox Text="{Binding StrengthValue}" Width="80" TextAlignment="Center" 
                         FontSize="16" Padding="8" Margin="0,5,0,0"/>
            </StackPanel>
            
            <StackPanel Margin="5">
                <TextBlock Text="Dexterity" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBox Text="{Binding DexterityValue}" Width="80" TextAlignment="Center" 
                         FontSize="16" Padding="8" Margin="0,5,0,0"/>
            </StackPanel>
            
            <StackPanel Margin="5">
                <TextBlock Text="Constitution" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBox Text="{Binding ConstitutionValue}" Width="80" TextAlignment="Center" 
                         FontSize="16" Padding="8" Margin="0,5,0,0"/>
            </StackPanel>
            
            <StackPanel Margin="5">
                <TextBlock Text="Intelligence" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBox Text="{Binding IntelligenceValue}" Width="80" TextAlignment="Center" 
                         FontSize="16" Padding="8" Margin="0,5,0,0"/>
            </StackPanel>
            
            <StackPanel Margin="5">
                <TextBlock Text="Wisdom" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBox Text="{Binding WisdomValue}" Width="80" TextAlignment="Center" 
                         FontSize="16" Padding="8" Margin="0,5,0,0"/>
            </StackPanel>
            
            <StackPanel Margin="5">
                <TextBlock Text="Charisma" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBox Text="{Binding CharismaValue}" Width="80" TextAlignment="Center" 
                         FontSize="16" Padding="8" Margin="0,5,0,0"/>
            </StackPanel>
        </UniformGrid>
        
        <!-- Total Points Display -->
        <TextBlock Text="{Binding TotalPoints, StringFormat='Total Points: \{0\}'}" 
                   FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
    </StackPanel>
</UserControl> 