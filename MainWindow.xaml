                                                Command="{Binding AddClassCommand}"
                                                Background="#27ae60" Foreground="White" 
                                                Padding="10,5" BorderThickness="0"/>
                                    </Grid> -->
                                    
                                    <!-- Total Level Display 
                                    <TextBlock Text="{Binding CurrentCharacter.Level, StringFormat='Total Level: {0}'}" 
                                               FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel> -->
                        


                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Multiclassing Tab -->
            <TabItem Header="Classes &amp; Multiclassing" Padding="15,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" Text="Character Classes" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                        <!-- Current Classes -->
                        <GroupBox Grid.Row="1" Header="Current Classes" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="{Binding CurrentCharacter.ClassSummary}" FontSize="16" FontWeight="Bold" 
                                          Margin="0,0,0,15" HorizontalAlignment="Center"/>
                                
                                <ItemsControl ItemsSource="{Binding CurrentCharacter.ClassLevels}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" 
                                                   Margin="0,5" Padding="15">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding ClassName}" FontSize="16" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding CharacterClass.Description}" 
                                                                  FontStyle="Italic" Foreground="#6c757d"/>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                                                        <TextBlock Text="Level:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                        <TextBox Text="{Binding Level}" Width="50" TextAlignment="Center" 
                                                                Padding="5" FontSize="14" FontWeight="Bold"/>
                                                    </StackPanel>
                                                    
                                                    <TextBlock Grid.Column="2" Text="{Binding CharacterClass.HitDie, StringFormat='Hit Die: d{0}'}" 
                                                              VerticalAlignment="Center" Margin="20,0" FontWeight="Bold"/>
                                                    
                                                    <Button Grid.Column="3" Content="Remove Class" 
                                                            Command="{Binding DataContext.RemoveClassCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#dc3545" Foreground="White" 
                                                            Padding="10,5" BorderThickness="0"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- No classes message -->
                                <TextBlock Text="No classes added yet. Add your first class below." 
                                          FontStyle="Italic" HorizontalAlignment="Center" Margin="20">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentCharacter.ClassLevels.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </GroupBox>

                        <!-- Add New Class -->
                        <GroupBox Grid.Row="2" Header="Add New Class" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Class Selection -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                    <Label Content="Select Class" FontWeight="Bold"/>
                                    <ComboBox ItemsSource="{Binding Classes}" 
                                              SelectedItem="{Binding SelectedClassToAdd}"
                                              DisplayMemberPath="Name" Padding="10" FontSize="14"/>
                                </StackPanel>

                                <!-- Level Selection -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,15,15">
                                    <Label Content="Starting Level" FontWeight="Bold"/>
                                    <TextBox Text="{Binding SelectedLevelToAdd}" 
                                            TextAlignment="Center" Padding="10" FontSize="14"/>
                                </StackPanel>

                                <!-- Add Button -->
                                <Button Grid.Row="0" Grid.Column="2" Content="Add Class" 
                                        Command="{Binding AddClassCommand}"
                                        Background="#28a745" Foreground="White" 
                                        Padding="20,10" BorderThickness="0"
                                        FontWeight="Bold" VerticalAlignment="Bottom" Margin="0,0,0,15"/>

                                <!-- Class Description -->
                                <Border Grid.Row="1" Grid.ColumnSpan="3" Background="#e9ecef" 
                                       BorderBrush="#ced4da" BorderThickness="1" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="{Binding SelectedClassToAdd.Name}" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding SelectedClassToAdd.Description}" 
                                                  TextWrapping="Wrap" Margin="0,5,0,0"/>
                                        <Grid Margin="0,10,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding SelectedClassToAdd.HitDie, StringFormat='Hit Die: d{0}'}" 
                                                      FontWeight="Bold"/>
                                            <TextBlock Grid.Column="1" Text="{Binding SelectedClassToAdd.PrimaryAbility, StringFormat='Primary Ability: {0}'}" 
                                                      FontWeight="Bold"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Skill Selection Section -->
                                <Border Grid.Row="2" Grid.ColumnSpan="3" Background="#fff3cd" 
                                       BorderBrush="#ffeaa7" BorderThickness="1" Padding="15" 
                                       Margin="0,15,0,0"
                                       Visibility="{Binding HasSkillChoices, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding SkillChoicePrompt}" FontSize="14" FontWeight="Bold" 
                                                  Margin="0,0,0,10"/>
                                        
                                        <!-- Available Skills -->
                                        <TextBlock Text="Available Skills:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <ItemsControl ItemsSource="{Binding AvailableSkillChoices}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding}" 
                                                           Command="{Binding DataContext.AddSkillCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"
                                                           Background="#007bff" Foreground="White" 
                                                           Padding="8,4" Margin="2" BorderThickness="0"
                                                           IsEnabled="{Binding DataContext.CanAddMoreSkills, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        
                                        <!-- Selected Skills -->
                                        <TextBlock Text="Selected Skills:" FontWeight="Bold" Margin="0,15,0,5"/>
                                        <ItemsControl ItemsSource="{Binding SelectedSkills}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#28a745" Margin="2" Padding="8,4" CornerRadius="3">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding SkillName}" Foreground="White" 
                                                                      VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                            <Button Content="Ã—" 
                                                                   Command="{Binding DataContext.RemoveSkillCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                   CommandParameter="{Binding}"
                                                                   Background="Transparent" Foreground="White" 
                                                                   BorderThickness="0" Padding="2" 
                                                                   FontWeight="Bold" FontSize="12"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        
                                        <TextBlock Text="No skills selected" FontStyle="Italic" Foreground="Gray" 
                                                   Margin="0,5,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedSkills.Count}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <!-- Total Level Summary -->
                                <Border Grid.Row="3" Grid.ColumnSpan="3" Background="#d4edda" 
                                       BorderBrush="#c3e6cb" BorderThickness="1" Padding="15" 
                                       Margin="0,15,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Total Character Level: " FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding CurrentCharacter.Level}" FontSize="20" FontWeight="Bold" 
                                                  Foreground="#155724"/>
                                        <TextBlock Text=" | Proficiency Bonus: " FontSize="16" FontWeight="Bold" Margin="20,0,0,0"/>
                                        <TextBlock Text="{Binding CurrentCharacter.ProficiencyBonus, StringFormat='+{0}'}" 
                                                  FontSize="20" FontWeight="Bold" Foreground="#155724"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Ability Scores Tab -->
            <TabItem Header="Ability Scores &amp; Skills" Padding="15,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Ability Scores" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                        <!-- Ability Score Generation Section -->
                        <Border Grid.Row="1" Background="#f8f9fa" BorderBrush="#6c757d" BorderThickness="2" 
                                Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="{Binding Settings.AbilityScoreMethod, StringFormat='Current Method: {0}'}" 
                                          FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                
                                <!-- Standard Array -->
                                <StackPanel Visibility="{Binding IsStandardArrayMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                        <TextBlock Text="Standard Array (15, 14, 13, 12, 10, 8)" FontSize="14" FontWeight="Bold" 
                                                   VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <Button Content="Assign Standard Array" 
                                                Command="{Binding OpenStandardArrayCommand}"
                                                Background="#3498db" Foreground="White" 
                                                Padding="15,8" BorderThickness="0" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <!-- Standard Array Control -->
                                    <ContentPresenter Content="{Binding StandardArrayViewModel}" Margin="0,15,0,0">
                                        <ContentPresenter.Resources>
                                            <DataTemplate DataType="{x:Type vm:StandardArrayViewModel}">
                                                <controls:StandardArrayControl DataContext="{Binding}"/>
                                            </DataTemplate>
                                        </ContentPresenter.Resources>
                                    </ContentPresenter>
                                </StackPanel>
                                
                                <!-- Point Buy -->
                                <StackPanel Visibility="{Binding IsPointBuyMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                        <TextBlock Text="{Binding Settings.PointBuyPoints, StringFormat='Point Buy ({0} points)'}" FontSize="14" FontWeight="Bold" 
                                                   VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <Button Content="Open Point Buy" 
                                                Command="{Binding OpenPointBuyCommand}"
                                                Background="#9b59b6" Foreground="White" 
                                                Padding="15,8" BorderThickness="0" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="Spend points to buy ability scores (8-15 range, costs vary)" 
                                               HorizontalAlignment="Center" FontStyle="Italic" Foreground="#6c757d" Margin="0,0,0,15"/>
                                    
                                    <!-- Point Buy Control -->
                                    <Border Background="White" BorderBrush="#dee2e6" BorderThickness="1" Padding="15">
                                        <Grid DataContext="{Binding PointBuyViewModel}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                                <TextBlock Text="{Binding UsedPoints, StringFormat='Used: \{0\}'}" 
                                                          FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                                <TextBlock Text=" / " FontSize="16" FontWeight="Bold" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding TotalPoints, StringFormat='\{0\} Points'}" 
                                                          FontSize="16" FontWeight="Bold" Margin="0,0,20,0"/>
                                                <TextBlock Text="{Binding AvailablePoints, StringFormat='(Available: \{0\})'}" 
                                                          FontSize="14" Foreground="#6c757d" Margin="0,0,20,0"/>
                                                <Button Content="Reset" Command="{Binding ResetPointBuyCommand}"
                                                        Background="#6c757d" Foreground="White" Padding="10,5" BorderThickness="0" Margin="0,0,10,0"/>
                                                <Button Content="Apply to Character" Command="{Binding ApplyPointBuyCommand}"
                                                        Background="#007bff" Foreground="White" Padding="15,8" BorderThickness="0" FontWeight="Bold"
                                                        IsEnabled="{Binding CanApplyPointBuy}"/>
                                            </StackPanel>
                                            
                                            <UniformGrid Grid.Row="1" Columns="3" Rows="2">
                                                <!-- Point Buy Controls for each ability -->
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Strength" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                                        <TextBox Text="{Binding StrengthCost}" Width="50" TextAlignment="Center" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding StrengthValue, StringFormat='= {0}'}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Dexterity" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                                        <TextBox Text="{Binding DexterityCost}" Width="50" TextAlignment="Center" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding DexterityValue, StringFormat='= {0}'}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Constitution" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                                        <TextBox Text="{Binding ConstitutionCost}" Width="50" TextAlignment="Center" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding ConstitutionValue, StringFormat='= {0}'}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Intelligence" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                                        <TextBox Text="{Binding IntelligenceCost}" Width="50" TextAlignment="Center" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding IntelligenceValue, StringFormat='= {0}'}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Wisdom" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                                        <TextBox Text="{Binding WisdomCost}" Width="50" TextAlignment="Center" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding WisdomValue, StringFormat='= {0}'}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Charisma" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                                        <TextBox Text="{Binding CharismaCost}" Width="50" TextAlignment="Center" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding CharismaValue, StringFormat='= {0}'}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </UniformGrid>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Rolling Methods -->
                                <StackPanel Visibility="{Binding IsRollingMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                        <TextBlock Text="Random Generation (4d6 drop lowest)" FontSize="14" FontWeight="Bold" 
                                                   VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <Button Content="Open Rolling Interface" 
                                                Command="{Binding OpenRollingCommand}"
                                                Background="#e74c3c" Foreground="White" 
                                                Padding="15,8" BorderThickness="0" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <!-- Rolling Control -->
                                    <Border Background="White" BorderBrush="#dee2e6" BorderThickness="1" Padding="15">
                                        <Grid DataContext="{Binding RollingViewModel}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Step 1: Generate Scores -->
                                            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                                <TextBlock Text="Step 1: Generate Ability Scores" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                                <TextBlock Text="{Binding MethodDescription}" FontStyle="Italic" Margin="0,0,0,10"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Button Content="Generate 6 Scores" Command="{Binding GenerateScoresCommand}"
                                                            Background="#27ae60" Foreground="White" Padding="15,8" BorderThickness="0"
                                                            IsEnabled="{Binding CanRoll}" Margin="0,0,10,0"/>
                                                    <Button Content="Reroll" Command="{Binding RerollCommand}"
                                                            Background="#e67e22" Foreground="White" Padding="15,8" BorderThickness="0"
                                                            Visibility="{Binding HasRolled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <!-- Generated Scores Display -->
                                            <Border Grid.Row="1" Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" 
                                                   Padding="15" Margin="0,0,0,15"
                                                   Visibility="{Binding HasRolledScores, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <StackPanel>
                                                    <TextBlock Text="Generated Scores:" FontWeight="Bold" Margin="0,0,0,10"/>
                                                    <ItemsControl ItemsSource="{Binding RolledScores}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Background="#007bff" Margin="5" Padding="10" CornerRadius="5">
                                                                    <TextBlock Text="{Binding}" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                    <TextBlock Text="{Binding TotalPoints, StringFormat='Total Points: {0}'}" 
                                                              FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                                </StackPanel>
                                            </Border>
                                            
                                            <!-- Step 2: Assignment -->
                                            <StackPanel Grid.Row="2" 
                                                       Visibility="{Binding HasRolledScores, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <TextBlock Text="Step 2: Assign Scores to Abilities" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                                                
                                                <!-- Assignment Interface -->
                                                <ContentPresenter Content="{Binding AssignmentViewModel}">
                                                    <ContentPresenter.Resources>
                                                        <DataTemplate DataType="{x:Type vm:AbilityScoreAssignmentViewModel}">
                                                            <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" Padding="15">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                    </Grid.RowDefinitions>
                                                                    
                                                                    <!-- Class Recommendation Section -->
                                                                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                                                        <TextBlock Text="Class Recommendation (Optional)" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                            </Grid.ColumnDefinitions>
                                                                            <ComboBox Grid.Column="0" 
                                                                                      ItemsSource="{Binding DataContext.Classes, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                                      SelectedItem="{Binding SelectedClass}"
                                                                                      DisplayMemberPath="Name" 
                                                                                      Padding="8" Margin="0,0,10,0"/>
                                                                            <Button Grid.Column="1" Content="Auto-Assign" 
                                                                                    Command="{Binding ApplyClassRecommendationCommand}"
                                                                                    Background="#28a745" Foreground="White" 
                                                                                    Padding="15,8" BorderThickness="0" FontWeight="Bold"/>
                                                                        </Grid>
                                                                        <TextBlock Text="{Binding ClassRecommendationText}" 
                                                                                   FontStyle="Italic" Foreground="#6c757d" Margin="0,5,0,0"
                                                                                   Visibility="{Binding HasClassRecommendation, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                                    </StackPanel>
                                                                    
                                                                    <!-- Assignment Grid -->
                                                                    <UniformGrid Grid.Row="1" Columns="3" Rows="2" Margin="0,0,0,15">
                                                                        <!-- Strength Assignment -->
                                                                        <StackPanel Margin="5">
                                                                            <TextBlock Text="Strength" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                                                            <ComboBox ItemsSource="{Binding GeneratedScores}" 
                                                                                      SelectedItem="{Binding StrengthAssignment}"
                                                                                      HorizontalAlignment="Center" Width="80" Padding="5"/>
                                                                        </StackPanel>
                                                                        
                                                                        <!-- Dexterity Assignment -->
                                                                        <StackPanel Margin="5">
                                                                            <TextBlock Text="Dexterity" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                                                            <ComboBox ItemsSource="{Binding GeneratedScores}" 
                                                                                      SelectedItem="{Binding DexterityAssignment}"
                                                                                      HorizontalAlignment="Center" Width="80" Padding="5"/>
                                                                        </StackPanel>
                                                                        
                                                                        <!-- Constitution Assignment -->
                                                                        <StackPanel Margin="5">
                                                                            <TextBlock Text="Constitution" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                                                            <ComboBox ItemsSource="{Binding GeneratedScores}" 
                                                                                      SelectedItem="{Binding ConstitutionAssignment}"
                                                                                      HorizontalAlignment="Center" Width="80" Padding="5"/>
                                                                        </StackPanel>
                                                                        
                                                                        <!-- Intelligence Assignment -->
                                                                        <StackPanel Margin="5">
                                                                            <TextBlock Text="Intelligence" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                                                            <ComboBox ItemsSource="{Binding GeneratedScores}" 
                                                                                      SelectedItem="{Binding IntelligenceAssignment}"
                                                                                      HorizontalAlignment="Center" Width="80" Padding="5"/>
                                                                        </StackPanel>
                                                                        
                                                                        <!-- Wisdom Assignment -->
                                                                        <StackPanel Margin="5">
                                                                            <TextBlock Text="Wisdom" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                                                            <ComboBox ItemsSource="{Binding GeneratedScores}" 
                                                                                      SelectedItem="{Binding WisdomAssignment}"
                                                                                      HorizontalAlignment="Center" Width="80" Padding="5"/>
                                                                        </StackPanel>
                                                                        
                                                                        <!-- Charisma Assignment -->
                                                                        <StackPanel Margin="5">
                                                                            <TextBlock Text="Charisma" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                                                            <ComboBox ItemsSource="{Binding GeneratedScores}" 
                                                                                      SelectedItem="{Binding CharismaAssignment}"
                                                                                      HorizontalAlignment="Center" Width="80" Padding="5"/>
                                                                        </StackPanel>
                                                                    </UniformGrid>
                                                                    
                                                                    <!-- Action Buttons -->
                                                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                                                        <Button Content="Clear All" Command="{Binding ClearAssignmentsCommand}"
                                                                                Background="#6c757d" Foreground="White" Padding="15,8" BorderThickness="0" Margin="0,0,10,0"/>
                                                                        <Button Content="Apply to Character" Command="{Binding ApplyAssignmentsCommand}"
                                                                                Background="#007bff" Foreground="White" Padding="15,8" BorderThickness="0" FontWeight="Bold"
                                                                                IsEnabled="{Binding CanApplyAssignments}"/>
                                                                    </StackPanel>
                                                                    
                                                                    <!-- Status Message -->
                                                                    <TextBlock Grid.Row="3" Text="Assign each generated score to an ability. Each score can only be used once." 
                                                                               FontStyle="Italic" Foreground="#6c757d" HorizontalAlignment="Center"/>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ContentPresenter.Resources>
                                                </ContentPresenter>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Free Entry -->
                                <StackPanel Visibility="{Binding IsFreeEntryMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                        <TextBlock Text="Free Entry (Manual Input)" FontSize="14" FontWeight="Bold" 
                                                   VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <Button Content="Open Free Entry" 
                                                Command="{Binding OpenFreeEntryCommand}"
                                                Background="#f39c12" Foreground="White" 
                                                Padding="15,8" BorderThickness="0" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="Enter ability scores directly (recommended range: 3-18)" 
                                               HorizontalAlignment="Center" FontStyle="Italic" Foreground="#6c757d" Margin="0,0,0,15"/>
                                    
                                    <!-- Free Entry Control -->
                                    <Border Background="White" BorderBrush="#dee2e6" BorderThickness="1" Padding="15">
                                        <Grid DataContext="{Binding FreeEntryViewModel}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                                <Button Content="Set Defaults (10s)" Command="{Binding SetDefaultsCommand}"
                                                        Background="#6c757d" Foreground="White" Padding="10,5" BorderThickness="0" Margin="0,0,10,0"/>
                                                <Button Content="Elite Array" Command="{Binding SetEliteArrayCommand}"
                                                        Background="#28a745" Foreground="White" Padding="10,5" BorderThickness="0"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Row="1" Text="{Binding TotalPoints, StringFormat='Total Points: {0}'}" 
                                                      FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                            
                                            <UniformGrid Grid.Row="2" Columns="3" Rows="2">
                                                <!-- Free entry controls for each ability -->
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Strength" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <TextBox Text="{Binding StrengthValue}" Width="60" TextAlignment="Center" 
                                                            FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>
                                                </StackPanel>
                                                
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Dexterity" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <TextBox Text="{Binding DexterityValue}" Width="60" TextAlignment="Center" 
                                                            FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>
                                                </StackPanel>
                                                
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Constitution" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <TextBox Text="{Binding ConstitutionValue}" Width="60" TextAlignment="Center" 
                                                            FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>
                                                </StackPanel>
                                                
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Intelligence" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <TextBox Text="{Binding IntelligenceValue}" Width="60" TextAlignment="Center" 
                                                            FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>
                                                </StackPanel>
                                                
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Wisdom" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <TextBox Text="{Binding WisdomValue}" Width="60" TextAlignment="Center" 
                                                            FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>
                                                </StackPanel>
                                                
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Charisma" FontWeight="Bold" HorizontalAlignment="Center"/>
                                                    <TextBox Text="{Binding CharismaValue}" Width="60" TextAlignment="Center" 
                                                            FontSize="16" FontWeight="Bold" Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </UniformGrid>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Ability Scores with Racial Bonuses -->
                        <UniformGrid Grid.Row="2" Columns="3" Rows="2" Margin="0,0,0,30">
                            <!-- Strength -->
                            <Border Margin="5" Padding="15" Background="White" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Strength" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding CurrentCharacter.AbilityScores.Strength}" 
                                             FontSize="18" FontWeight="Bold" TextAlignment="Center" 
                                             Padding="8" BorderBrush="#ddd" BorderThickness="2" Width="60"/>
                                    
                                    <!-- Bonuses Display -->
                                    <StackPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.StrengthRacialBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Green" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Racial)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.StrengthBackgroundBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Blue" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Background)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <Border BorderBrush="#ccc" BorderThickness="0,1,0,0" Margin="5,2,5,2"/>
                                        <TextBlock Text="{Binding CurrentCharacter.StrengthTotal}" 
                                                   HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding CurrentCharacter.StrengthModifier, StringFormat='Modifier: {0:+#;-#;0}'}" 
                                               HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>

                            <!-- Dexterity -->
                            <Border Margin="5" Padding="15" Background="White" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Dexterity" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding CurrentCharacter.AbilityScores.Dexterity}" 
                                             FontSize="18" FontWeight="Bold" TextAlignment="Center" 
                                             Padding="8" BorderBrush="#ddd" BorderThickness="2" Width="60"/>
                                    
                                    <!-- Bonuses Display -->
                                    <StackPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.DexterityRacialBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Green" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Racial)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.DexterityBackgroundBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Blue" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Background)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <Border BorderBrush="#ccc" BorderThickness="0,1,0,0" Margin="5,2,5,2"/>
                                        <TextBlock Text="{Binding CurrentCharacter.DexterityTotal}" 
                                                   HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding CurrentCharacter.DexterityModifier, StringFormat='Modifier: {0:+#;-#;0}'}" 
                                               HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>

                            <!-- Constitution -->
                            <Border Margin="5" Padding="15" Background="White" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Constitution" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding CurrentCharacter.AbilityScores.Constitution}" 
                                             FontSize="18" FontWeight="Bold" TextAlignment="Center" 
                                             Padding="8" BorderBrush="#ddd" BorderThickness="2" Width="60"/>
                                    
                                    <!-- Bonuses Display -->
                                    <StackPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.ConstitutionRacialBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Green" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Racial)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.ConstitutionBackgroundBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Blue" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Background)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <Border BorderBrush="#ccc" BorderThickness="0,1,0,0" Margin="5,2,5,2"/>
                                        <TextBlock Text="{Binding CurrentCharacter.ConstitutionTotal}" 
                                                   HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding CurrentCharacter.ConstitutionModifier, StringFormat='Modifier: {0:+#;-#;0}'}" 
                                               HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>

                            <!-- Intelligence -->
                            <Border Margin="5" Padding="15" Background="White" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Intelligence" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding CurrentCharacter.AbilityScores.Intelligence}" 
                                             FontSize="18" FontWeight="Bold" TextAlignment="Center" 
                                             Padding="8" BorderBrush="#ddd" BorderThickness="2" Width="60"/>
                                    
                                    <!-- Bonuses Display -->
                                    <StackPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.IntelligenceRacialBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Green" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Racial)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.IntelligenceBackgroundBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Blue" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Background)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <Border BorderBrush="#ccc" BorderThickness="0,1,0,0" Margin="5,2,5,2"/>
                                        <TextBlock Text="{Binding CurrentCharacter.IntelligenceTotal}" 
                                                   HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding CurrentCharacter.IntelligenceModifier, StringFormat='Modifier: {0:+#;-#;0}'}" 
                                               HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>

                            <!-- Wisdom -->
                            <Border Margin="5" Padding="15" Background="White" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Wisdom" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding CurrentCharacter.AbilityScores.Wisdom}" 
                                             FontSize="18" FontWeight="Bold" TextAlignment="Center" 
                                             Padding="8" BorderBrush="#ddd" BorderThickness="2" Width="60"/>
                                    
                                    <!-- Bonuses Display -->
                                    <StackPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.WisdomRacialBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Green" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Racial)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.WisdomBackgroundBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Blue" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Background)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <Border BorderBrush="#ccc" BorderThickness="0,1,0,0" Margin="5,2,5,2"/>
                                        <TextBlock Text="{Binding CurrentCharacter.WisdomTotal}" 
                                                   HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding CurrentCharacter.WisdomModifier, StringFormat='Modifier: {0:+#;-#;0}'}" 
                                               HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>

                            <!-- Charisma -->
                            <Border Margin="5" Padding="15" Background="White" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Charisma" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding CurrentCharacter.AbilityScores.Charisma}" 
                                             FontSize="18" FontWeight="Bold" TextAlignment="Center" 
                                             Padding="8" BorderBrush="#ddd" BorderThickness="2" Width="60"/>
                                    
                                    <!-- Bonuses Display -->
                                    <StackPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.CharismaRacialBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Green" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Racial)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.CharismaBackgroundBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Blue" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Background)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <Border BorderBrush="#ccc" BorderThickness="0,1,0,0" Margin="5,2,5,2"/>
                                        <TextBlock Text="{Binding CurrentCharacter.CharismaTotal}" 
                                                   HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding CurrentCharacter.CharismaModifier, StringFormat='Modifier: {0:+#;-#;0}'}" 
                                               HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>

                        <!-- Skill Proficiencies Section -->
                        <StackPanel Grid.Row="3">
                            <TextBlock Text="Skill Proficiencies" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Racial Skill Proficiencies -->
                                <Border Grid.Column="0" Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" Padding="15" Margin="0,0,5,20">
                                    <StackPanel>
                                        <TextBlock Text="Racial Skill Proficiencies" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <ItemsControl ItemsSource="{Binding CurrentCharacter.RacialSkillProficiencies}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#28a745" Margin="2" Padding="5,2" CornerRadius="3">
                                                        <TextBlock Text="{Binding}" Foreground="White" FontSize="12"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                        <TextBlock Text="No racial skill proficiencies" FontStyle="Italic" Foreground="Gray">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CurrentCharacter.RacialSkillProficiencies.Count}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Background Skill Proficiencies -->
                                <Border Grid.Column="1" Background="#e8f4fd" BorderBrush="#3498db" BorderThickness="1" Padding="15" Margin="5,0,5,20">
                                    <StackPanel>
                                        <TextBlock Text="Background Skill Proficiencies" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <ItemsControl ItemsSource="{Binding CurrentCharacter.BackgroundSkillProficiencies}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#3498db" Margin="2" Padding="5,2" CornerRadius="3">
                                                        <TextBlock Text="{Binding}" Foreground="White" FontSize="12"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                        <TextBlock Text="No background skill proficiencies" FontStyle="Italic" Foreground="Gray">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CurrentCharacter.BackgroundSkillProficiencies.Count}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Class Skill Proficiencies -->
                                <Border Grid.Column="2" Background="#fff3cd" BorderBrush="#ffc107" BorderThickness="1" Padding="15" Margin="5,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="Class Skill Proficiencies" FontWeight="Bold" Margin="0,0,0,10"/>
                                        <ItemsControl ItemsSource="{Binding CurrentCharacter.ClassSkillProficiencies}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#ffc107" Margin="2" Padding="5,2" CornerRadius="3">
                                                        <TextBlock Text="{Binding}" Foreground="White" FontSize="12"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                        </ItemsControl>
                                        <TextBlock Text="No class skill proficiencies" FontStyle="Italic" Foreground="Gray">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CurrentCharacter.ClassSkillProficiencies.Count}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Character Stats Tab -->
            <TabItem Header="Character Stats" Padding="15,10">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Combat Stats" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- Armor Class Section -->
                        <Border Margin="0,0,0,15" Padding="15" Background="#e8f4fd" BorderBrush="#3498db" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Armor Class" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Calculated AC: " FontWeight="Bold"/>
                                        <TextBlock Text="{Binding CurrentCharacter.CalculatedArmorClass}" FontWeight="Bold" Foreground="#3498db"/>
                                        <TextBlock Text=" (10 + Dex modifier)" FontStyle="Italic" Foreground="Gray" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <TextBox Grid.Column="1" Text="{Binding CurrentCharacter.ArmorClass}" 
                                             Width="80" Padding="5" BorderBrush="#ddd" BorderThickness="1" Margin="10,0"/>
                                    <Button Grid.Column="2" Content="Apply Calculated AC" 
                                            Background="#3498db" Foreground="White" Padding="8,4" BorderThickness="0"
                                            Click="ApplyCalculatedArmorClass_Click"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Hit Points Section -->
                        <Border Margin="0,0,0,15" Padding="15" Background="#fff3cd" BorderBrush="#ffc107" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Hit Points" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                
                                <!-- Calculated Max HP Display -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Calculated Max HP: " FontWeight="Bold"/>
                                        <TextBlock Text="{Binding CurrentCharacter.CalculatedMaxHitPoints}" FontWeight="Bold" Foreground="#e67e22"/>
                                        <TextBlock Text="{Binding CurrentCharacter.HitPointCalculationMethodDescription, StringFormat=' ({0})'}" FontStyle="Italic" Foreground="Gray" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="Apply Calculated HP" 
                                            Background="#e67e22" Foreground="White" Padding="8,4" BorderThickness="0"
                                            Click="ApplyCalculatedHitPoints_Click"/>
                                </Grid>
                                
                                <!-- Current HP Input -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Current Hit Points" FontWeight="Bold"/>
                                    <TextBox Grid.Column="1" Text="{Binding CurrentCharacter.HitPoints}" 
                                             Width="80" Padding="5" BorderBrush="#ddd" BorderThickness="1"/>
                                </Grid>

                                <!-- Max HP Input -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Max Hit Points" FontWeight="Bold"/>
                                    <TextBox Grid.Column="1" Text="{Binding CurrentCharacter.MaxHitPoints}" 
                                             Width="80" Padding="5" BorderBrush="#ddd" BorderThickness="1"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Speed" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentCharacter.Speed, StringFormat='{}{0} ft'}" 
                                       VerticalAlignment="Center" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Experience" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Experience Points" FontWeight="Bold"/>
                            <TextBox Grid.Column="1" Text="{Binding CurrentCharacter.ExperiencePoints}" 
                                     Width="100" Padding="5" BorderBrush="#ddd" BorderThickness="1"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Proficiency Bonus" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentCharacter.ProficiencyBonus, StringFormat='+{0}'}" 
                                       VerticalAlignment="Center" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#34495e" Padding="10">
            <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="12"/>
        </Border>
    </Grid>
</Window> 