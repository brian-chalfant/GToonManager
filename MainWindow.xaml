                                                Command="{Binding AddClassCommand}"
                                                Background="#27ae60" Foreground="White" 
                                                Padding="10,5" BorderThickness="0"/>
                                    </Grid> -->
                                    
                                    <!-- Total Level Display 
                                    <TextBlock Text="{Binding CurrentCharacter.Level, StringFormat='Total Level: {0}'}" 
                                               FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel> -->
                        


                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Multiclassing Tab -->
            <TabItem Header="Classes &amp; Multiclassing" Padding="15,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" Text="Character Classes" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                        <!-- Current Classes -->
                        <GroupBox Grid.Row="1" Header="Current Classes" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="{Binding CurrentCharacter.ClassSummary}" FontSize="16" FontWeight="Bold" 
                                          Margin="0,0,0,15" HorizontalAlignment="Center"/>
                                
                                <ItemsControl ItemsSource="{Binding CurrentCharacter.ClassLevels}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" 
                                                   Margin="0,5" Padding="15">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding ClassName}" FontSize="16" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding CharacterClass.Description}" 
                                                                  FontStyle="Italic" Foreground="#6c757d"/>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                                                        <TextBlock Text="Level:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                        <TextBox Text="{Binding Level}" Width="50" TextAlignment="Center" 
                                                                Padding="5" FontSize="14" FontWeight="Bold"/>
                                                    </StackPanel>
                                                    
                                                    <TextBlock Grid.Column="2" Text="{Binding CharacterClass.HitDie, StringFormat='Hit Die: d{0}'}" 
                                                              VerticalAlignment="Center" Margin="20,0" FontWeight="Bold"/>
                                                    
                                                    <Button Grid.Column="3" Content="Remove Class" 
                                                            Command="{Binding DataContext.RemoveClassCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#dc3545" Foreground="White" 
                                                            Padding="10,5" BorderThickness="0"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- No classes message -->
                                <TextBlock Text="No classes added yet. Add your first class below." 
                                          FontStyle="Italic" HorizontalAlignment="Center" Margin="20">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentCharacter.ClassLevels.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </GroupBox>

                        <!-- Add New Class -->
                        <GroupBox Grid.Row="2" Header="Add New Class" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Class Selection -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                    <Label Content="Select Class" FontWeight="Bold"/>
                                    <ComboBox ItemsSource="{Binding Classes}" 
                                              SelectedItem="{Binding SelectedClassToAdd}"
                                              DisplayMemberPath="Name" Padding="10" FontSize="14"/>
                                </StackPanel>

                                <!-- Level Selection -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,15,15">
                                    <Label Content="Starting Level" FontWeight="Bold"/>
                                    <TextBox Text="{Binding SelectedLevelToAdd}" 
                                            TextAlignment="Center" Padding="10" FontSize="14"/>
                                </StackPanel>

                                <!-- Add Button -->
                                <Button Grid.Row="0" Grid.Column="2" Content="Add Class" 
                                        Command="{Binding AddClassCommand}"
                                        Background="#28a745" Foreground="White" 
                                        Padding="20,10" BorderThickness="0"
                                        FontWeight="Bold" VerticalAlignment="Bottom" Margin="0,0,0,15"/>

                                <!-- Class Description -->
                                <Border Grid.Row="1" Grid.ColumnSpan="3" Background="#e9ecef" 
                                       BorderBrush="#ced4da" BorderThickness="1" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="{Binding SelectedClassToAdd.Name}" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding SelectedClassToAdd.Description}" 
                                                  TextWrapping="Wrap" Margin="0,5,0,0"/>
                                        <Grid Margin="0,10,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding SelectedClassToAdd.HitDie, StringFormat='Hit Die: d{0}'}" 
                                                      FontWeight="Bold"/>
                                            <TextBlock Grid.Column="1" Text="{Binding SelectedClassToAdd.PrimaryAbility, StringFormat='Primary Ability: {0}'}" 
                                                      FontWeight="Bold"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Skill Selection Section -->
                                <Border Grid.Row="2" Grid.ColumnSpan="3" Background="#fff3cd" 
                                       BorderBrush="#ffeaa7" BorderThickness="1" Padding="15" 
                                       Margin="0,15,0,0"
                                       Visibility="{Binding HasSkillChoices, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding SkillChoicePrompt}" FontSize="14" FontWeight="Bold" 
                                                  Margin="0,0,0,10"/>
                                        
                                        <!-- Available Skills -->
                                        <TextBlock Text="Available Skills:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <ItemsControl ItemsSource="{Binding AvailableSkillChoices}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding}" 
                                                           Command="{Binding DataContext.AddSkillCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"
                                                           Background="#007bff" Foreground="White" 
                                                           Padding="8,4" Margin="2" BorderThickness="0"
                                                           IsEnabled="{Binding DataContext.CanAddMoreSkills, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        
                                        <!-- Selected Skills -->
                                        <TextBlock Text="Selected Skills:" FontWeight="Bold" Margin="0,15,0,5"/>
                                        <ItemsControl ItemsSource="{Binding SelectedSkills}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#28a745" Margin="2" Padding="8,4" CornerRadius="3">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding SkillName}" Foreground="White" 
                                                                      VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                            <Button Content="×" 
                                                                   Command="{Binding DataContext.RemoveSkillCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                   CommandParameter="{Binding}"
                                                                   Background="Transparent" Foreground="White" 
                                                                   BorderThickness="0" Padding="2" 
                                                                   FontWeight="Bold" FontSize="12"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        
                                        <TextBlock Text="No skills selected" FontStyle="Italic" Foreground="Gray" 
                                                   Margin="0,5,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedSkills.Count}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <!-- Total Level Summary -->
                                <Border Grid.Row="3" Grid.ColumnSpan="3" Background="#d4edda" 
                                       BorderBrush="#c3e6cb" BorderThickness="1" Padding="15" 
                                       Margin="0,15,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Total Character Level: " FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding CurrentCharacter.Level}" FontSize="20" FontWeight="Bold" 
                                                  Foreground="#155724"/>
                                        <TextBlock Text=" | Proficiency Bonus: " FontSize="16" FontWeight="Bold" Margin="20,0,0,0"/>
                                        <TextBlock Text="{Binding CurrentCharacter.ProficiencyBonus, StringFormat='+{0}'}" 
                                                  FontSize="20" FontWeight="Bold" Foreground="#155724"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Generate Ability Scores Tab -->
            <TabItem Header="Generate Ability Scores" Padding="15,10">
                <TabItem.Resources>
                    <!-- Medieval Theme Resources -->
                    <SolidColorBrush x:Key="MedievalBackground" Color="#F5E6C8"/>
                    <SolidColorBrush x:Key="PrimaryGold" Color="#D4AF37"/>
                    <SolidColorBrush x:Key="PrimaryRed" Color="#7B0A02"/>
                    <SolidColorBrush x:Key="PanelBlue" Color="#1B2A41"/>
                    
                    <!-- Button Style -->
                    <Style TargetType="Button" x:Key="MedievalButtonStyle">
                        <Setter Property="Background" Value="{StaticResource PrimaryRed}"/>
                        <Setter Property="Foreground" Value="{StaticResource PrimaryGold}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryGold}"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="FontFamily" Value="Garamond"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                                            <Setter TargetName="border" Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#D4AF37" BlurRadius="5" ShadowDepth="0"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    
                    <!-- Panel Style -->
                    <Style TargetType="Border" x:Key="AbilityPanelStyle">
                        <Setter Property="Background" Value="{StaticResource PanelBlue}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryGold}"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="CornerRadius" Value="8"/>
                        <Setter Property="Margin" Value="6"/>
                        <Setter Property="Padding" Value="10"/>
                    </Style>
                </TabItem.Resources>
                
                <Border Background="{StaticResource MedievalBackground}" BorderBrush="{StaticResource PrimaryRed}" BorderThickness="3">
                    <Border BorderBrush="{StaticResource PrimaryGold}" BorderThickness="1" Margin="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Title Bar -->
                            <Border Grid.Row="0" Background="{StaticResource PrimaryRed}" Padding="20,15">
                                <Border BorderBrush="{StaticResource PrimaryGold}" BorderThickness="1">
                                    <TextBlock Text="Generate Ability Scores" 
                                               FontFamily="Garamond" FontSize="24" FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryGold}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Padding="10,5">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="2"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </Border>
                            </Border>
                            
                            <!-- Ability Score Panels -->
                            <Grid Grid.Row="1" Margin="20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Strength -->
                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource AbilityPanelStyle}">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="⚔️" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="STRENGTH" FontFamily="Garamond" FontSize="16" FontWeight="Bold" 
                                                   Foreground="{StaticResource PrimaryGold}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <Border Background="{StaticResource PrimaryRed}" BorderBrush="{StaticResource PrimaryGold}" 
                                                BorderThickness="2" Width="48" Height="48" CornerRadius="24">
                                            <TextBlock Text="{Binding CurrentCharacter.AbilityScores.Strength, FallbackValue='10'}" 
                                                       FontFamily="Garamond" FontSize="18" FontWeight="Bold"
                                                       Foreground="{StaticResource PrimaryGold}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Dexterity -->
                                <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource AbilityPanelStyle}">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="🏹" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="DEXTERITY" FontFamily="Garamond" FontSize="16" FontWeight="Bold" 
                                                   Foreground="{StaticResource PrimaryGold}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <Border Background="{StaticResource PrimaryRed}" BorderBrush="{StaticResource PrimaryGold}" 
                                                BorderThickness="2" Width="48" Height="48" CornerRadius="24">
                                            <TextBlock Text="{Binding CurrentCharacter.AbilityScores.Dexterity, FallbackValue='10'}" 
                                                       FontFamily="Garamond" FontSize="18" FontWeight="Bold"
                                                       Foreground="{StaticResource PrimaryGold}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Constitution -->
                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource AbilityPanelStyle}">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="🛡️" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="CONSTITUTION" FontFamily="Garamond" FontSize="16" FontWeight="Bold" 
                                                   Foreground="{StaticResource PrimaryGold}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <Border Background="{StaticResource PrimaryRed}" BorderBrush="{StaticResource PrimaryGold}" 
                                                BorderThickness="2" Width="48" Height="48" CornerRadius="24">
                                            <TextBlock Text="{Binding CurrentCharacter.AbilityScores.Constitution, FallbackValue='10'}" 
                                                       FontFamily="Garamond" FontSize="18" FontWeight="Bold"
                                                       Foreground="{StaticResource PrimaryGold}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Intelligence -->
                                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource AbilityPanelStyle}">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="🔮" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="INTELLIGENCE" FontFamily="Garamond" FontSize="16" FontWeight="Bold" 
                                                   Foreground="{StaticResource PrimaryGold}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <Border Background="{StaticResource PrimaryRed}" BorderBrush="{StaticResource PrimaryGold}" 
                                                BorderThickness="2" Width="48" Height="48" CornerRadius="24">
                                            <TextBlock Text="{Binding CurrentCharacter.AbilityScores.Intelligence, FallbackValue='10'}" 
                                                       FontFamily="Garamond" FontSize="18" FontWeight="Bold"
                                                       Foreground="{StaticResource PrimaryGold}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Wisdom -->
                                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource AbilityPanelStyle}">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="📖" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="WISDOM" FontFamily="Garamond" FontSize="16" FontWeight="Bold" 
                                                   Foreground="{StaticResource PrimaryGold}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <Border Background="{StaticResource PrimaryRed}" BorderBrush="{StaticResource PrimaryGold}" 
                                                BorderThickness="2" Width="48" Height="48" CornerRadius="24">
                                            <TextBlock Text="{Binding CurrentCharacter.AbilityScores.Wisdom, FallbackValue='10'}" 
                                                       FontFamily="Garamond" FontSize="18" FontWeight="Bold"
                                                       Foreground="{StaticResource PrimaryGold}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Charisma -->
                                <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource AbilityPanelStyle}">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="👑" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="CHARISMA" FontFamily="Garamond" FontSize="16" FontWeight="Bold" 
                                                   Foreground="{StaticResource PrimaryGold}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <Border Background="{StaticResource PrimaryRed}" BorderBrush="{StaticResource PrimaryGold}" 
                                                BorderThickness="2" Width="48" Height="48" CornerRadius="24">
                                            <TextBlock Text="{Binding CurrentCharacter.AbilityScores.Charisma, FallbackValue='10'}" 
                                                       FontFamily="Garamond" FontSize="18" FontWeight="Bold"
                                                       Foreground="{StaticResource PrimaryGold}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            
                            <!-- Buttons Section -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,16">
                                <Button Content="Roll 4d6 (Drop Lowest)" 
                                        Command="{Binding OpenRollingCommand}"
                                        Style="{StaticResource MedievalButtonStyle}" 
                                        Margin="0,0,15,0"/>
                                <Button Content="Standard Array" 
                                        Command="{Binding OpenStandardArrayCommand}"
                                        Style="{StaticResource MedievalButtonStyle}" 
                                        Margin="0,0,15,0"/>
                                <Button Content="Point Buy" 
                                        Command="{Binding OpenPointBuyCommand}"
                                        Style="{StaticResource MedievalButtonStyle}" 
                                        Margin="0,0,15,0"/>
                                <Button Content="Manual Entry" 
                                        Command="{Binding OpenFreeEntryCommand}"
                                        Style="{StaticResource MedievalButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Border>
            </TabItem>

            <!-- Character Stats Tab -->
            <TabItem Header="Character Stats" Padding="15,10">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Combat Stats" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- Armor Class Section -->
                        <Border Margin="0,0,0,15" Padding="15" Background="#e8f4fd" BorderBrush="#3498db" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Armor Class" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Calculated AC: " FontWeight="Bold"/>
                                        <TextBlock Text="{Binding CurrentCharacter.CalculatedArmorClass}" FontWeight="Bold" Foreground="#3498db"/>
                                        <TextBlock Text=" (10 + Dex modifier)" FontStyle="Italic" Foreground="Gray" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <TextBox Grid.Column="1" Text="{Binding CurrentCharacter.ArmorClass}" 
                                             Width="80" Padding="5" BorderBrush="#ddd" BorderThickness="1" Margin="10,0"/>
                                    <Button Grid.Column="2" Content="Apply Calculated AC" 
                                            Background="#3498db" Foreground="White" Padding="8,4" BorderThickness="0"
                                            Click="ApplyCalculatedArmorClass_Click"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Hit Points Section -->
                        <Border Margin="0,0,0,15" Padding="15" Background="#fff3cd" BorderBrush="#ffc107" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Hit Points" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                
                                <!-- Calculated Max HP Display -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Calculated Max HP: " FontWeight="Bold"/>
                                        <TextBlock Text="{Binding CurrentCharacter.CalculatedMaxHitPoints}" FontWeight="Bold" Foreground="#e67e22"/>
                                        <TextBlock Text="{Binding CurrentCharacter.HitPointCalculationMethodDescription, StringFormat=' ({0})'}" FontStyle="Italic" Foreground="Gray" Margin="5,0,0,0"/>
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="Apply Calculated HP" 
                                            Background="#e67e22" Foreground="White" Padding="8,4" BorderThickness="0"
                                            Click="ApplyCalculatedHitPoints_Click"/>
                                </Grid>
                                
                                <!-- Current HP Input -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Current Hit Points" FontWeight="Bold"/>
                                    <TextBox Grid.Column="1" Text="{Binding CurrentCharacter.HitPoints}" 
                                             Width="80" Padding="5" BorderBrush="#ddd" BorderThickness="1"/>
                                </Grid>

                                <!-- Max HP Input -->
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Max Hit Points" FontWeight="Bold"/>
                                    <TextBox Grid.Column="1" Text="{Binding CurrentCharacter.MaxHitPoints}" 
                                             Width="80" Padding="5" BorderBrush="#ddd" BorderThickness="1"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Speed" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentCharacter.Speed, StringFormat='{}{0} ft'}" 
                                       VerticalAlignment="Center" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Experience" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Experience Points" FontWeight="Bold"/>
                            <TextBox Grid.Column="1" Text="{Binding CurrentCharacter.ExperiencePoints}" 
                                     Width="100" Padding="5" BorderBrush="#ddd" BorderThickness="1"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Proficiency Bonus" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentCharacter.ProficiencyBonus, StringFormat='+{0}'}" 
                                       VerticalAlignment="Center" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#34495e" Padding="10">
            <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="12"/>
        </Border>
    </Grid>
</Window> 