<Window x:Class="GToonManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GToonManager.ViewModels"
        mc:Ignorable="d"
        Title="GToon Manager - Character Creator" 
        Height="800" Width="1200"
        WindowState="Maximized"
        Background="#f5f5f5">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding NewCharacterCommand}"/>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding LoadCharacterCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveCharacterCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl+Shift" Command="{Binding SaveCharacterAsCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#ecf0f1" Height="25" BorderBrush="#bdc3c7" BorderThickness="0,0,0,1">
            <MenuItem Header="_File" Padding="8,4">
                <MenuItem Header="_New Character" Command="{Binding NewCharacterCommand}" InputGestureText="Ctrl+N"/>
                <MenuItem Header="_Open Character..." Command="{Binding LoadCharacterCommand}" InputGestureText="Ctrl+O"/>
                <MenuItem Header="_Save Character" Command="{Binding SaveCharacterCommand}" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save Character _As..." Command="{Binding SaveCharacterAsCommand}" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="_Export">
                    <MenuItem Header="Export to _HTML..." Command="{Binding ExportToHtmlCommand}"/>
                    <MenuItem Header="Export to _PDF..." Command="{Binding ExportToPdfCommand}"/>
                </MenuItem>
                <MenuItem Header="_Debug">
                    <MenuItem Header="Discover PDF _Fields..." Command="{Binding DiscoverPdfFieldsCommand}"/>
                    <MenuItem Header="_Analyze PDF Structure..." Command="{Binding AnalyzePdfCommand}"/>
                    <MenuItem Header="Create _Test PDF..." Command="{Binding CreateTestPdfCommand}"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Settings..." Command="{Binding ShowSettingsCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding ExitApplicationCommand}" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="_Help" Padding="8,4">
                <MenuItem Header="_About GToon Manager..." Command="{Binding ShowAboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Header -->
        <Border Grid.Row="1" Background="#2c3e50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="GToon Manager" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,20,0"/>
                    <TextBlock Text="D and D 5E Character Creator" FontSize="14" Foreground="#bdc3c7" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="New Character" Command="{Binding NewCharacterCommand}" 
                            Background="#3498db" Foreground="White" Padding="15,8" Margin="5" 
                            BorderThickness="0" FontWeight="Bold"/>
                    <Button Content="Load Character" Command="{Binding LoadCharacterCommand}" 
                            Background="#9b59b6" Foreground="White" Padding="15,8" Margin="5" 
                            BorderThickness="0" FontWeight="Bold"/>
                    <Button Content="Save Character" Command="{Binding SaveCharacterCommand}" 
                            Background="#f39c12" Foreground="White" Padding="15,8" Margin="5" 
                            BorderThickness="0" FontWeight="Bold"/>
                    <Button Content="Export HTML" Command="{Binding ExportToHtmlCommand}" 
                            Background="#27ae60" Foreground="White" Padding="15,8" Margin="5" 
                            BorderThickness="0" FontWeight="Bold"/>
                    <Button Content="Export PDF" Command="{Binding ExportToPdfCommand}" 
                            Background="#e74c3c" Foreground="White" Padding="15,8" Margin="5" 
                            BorderThickness="0" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="2" Margin="20" Background="White">
            <!-- Basic Info Tab -->
            <TabItem Header="Basic Info" Padding="15,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Character Name -->
                        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,20">
                            <Label Content="Character Name" FontWeight="Bold" FontSize="14"/>
                            <TextBox Text="{Binding CurrentCharacter.Name}" FontSize="16" Padding="10" 
                                     BorderBrush="#ddd" BorderThickness="2"/>
                        </StackPanel>

                        <!-- Player Name -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,20">
                            <Label Content="Player Name" FontWeight="Bold"/>
                            <TextBox Text="{Binding CurrentCharacter.PlayerName}" Padding="8" 
                                     BorderBrush="#ddd" BorderThickness="1"/>
                        </StackPanel>

                        <!-- Level -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,20">
                            <Label Content="Total Level" FontWeight="Bold"/>
                            <Border Background="White" BorderBrush="#ddd" BorderThickness="1" Padding="8">
                                <TextBlock Text="{Binding CurrentCharacter.Level}" FontSize="14" FontWeight="Bold" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="(Calculated from class levels)" FontSize="10" FontStyle="Italic" 
                                      Foreground="Gray" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Race Selection -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,20">
                            <Label Content="Race" FontWeight="Bold"/>
                            <ComboBox ItemsSource="{Binding Races}" 
                                      SelectedItem="{Binding CurrentCharacter.Race}"
                                      DisplayMemberPath="Name" Padding="8" 
                                      BorderBrush="#ddd" BorderThickness="1"/>
                        </StackPanel>

                        <!-- Subrace Selection -->
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,20">
                            <Label Content="Subrace" FontWeight="Bold"/>
                            <ComboBox ItemsSource="{Binding CurrentCharacter.AvailableSubraces}" 
                                      SelectedItem="{Binding CurrentCharacter.Subrace}"
                                      DisplayMemberPath="Name" Padding="8" 
                                      BorderBrush="#ddd" BorderThickness="1"
                                      IsEnabled="{Binding CurrentCharacter.HasSubraces}"/>
                        </StackPanel>

                        <!-- Background Selection -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,20">
                            <Label Content="Background" FontWeight="Bold"/>
                            <ComboBox ItemsSource="{Binding Backgrounds}" 
                                      SelectedItem="{Binding CurrentCharacter.Background}"
                                      DisplayMemberPath="Name" Padding="8" 
                                      BorderBrush="#ddd" BorderThickness="1"/>
                        </StackPanel>

                        <!-- Classes Section -->
                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,20">
                            <Label Content="Classes" FontWeight="Bold"/>
                            <Border BorderBrush="#ddd" BorderThickness="1" Padding="10" Background="White">
                                <StackPanel>
                                    <!-- Current Classes List -->
                                    <TextBlock Text="Current Classes:" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <ItemsControl ItemsSource="{Binding CurrentCharacter.ClassLevels}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding ClassName}" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="1" Text="Level:" Margin="10,0,5,0" VerticalAlignment="Center"/>
                                                    <TextBox Grid.Column="2" Text="{Binding Level}" Width="40" 
                                                            TextAlignment="Center" Padding="2"/>
                                                    <Button Grid.Column="3" Content="Remove" 
                                                            Command="{Binding DataContext.RemoveClassCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#e74c3c" Foreground="White" 
                                                            Padding="5,2" Margin="5,0,0,0" BorderThickness="0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    
                                    <!-- Add New Class -->
                                    <Separator Margin="0,10"/>
                                    <TextBlock Text="Add Class:" FontWeight="Bold" Margin="0,5,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox Grid.Column="0" ItemsSource="{Binding Classes}" 
                                                  SelectedItem="{Binding SelectedClassToAdd}"
                                                  DisplayMemberPath="Name" Padding="5" Margin="0,0,5,0"/>
                                        <TextBlock Grid.Column="1" Text="Level:" VerticalAlignment="Center" Margin="5,0"/>
                                        <TextBox Grid.Column="2" Text="{Binding SelectedLevelToAdd}" 
                                                Width="40" TextAlignment="Center" Padding="2" Margin="0,0,5,0"/>
                                        <Button Grid.Column="3" Content="Add" 
                                                Command="{Binding AddClassCommand}"
                                                Background="#27ae60" Foreground="White" 
                                                Padding="10,5" BorderThickness="0"/>
                                    </Grid>
                                    
                                    <!-- Total Level Display -->
                                    <TextBlock Text="{Binding CurrentCharacter.Level, StringFormat='Total Level: {0}'}" 
                                               FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>


                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Multiclassing Tab -->
            <TabItem Header="Classes &amp; Multiclassing" Padding="15,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" Text="Character Classes" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                        <!-- Current Classes -->
                        <GroupBox Grid.Row="1" Header="Current Classes" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="{Binding CurrentCharacter.ClassSummary}" FontSize="16" FontWeight="Bold" 
                                          Margin="0,0,0,15" HorizontalAlignment="Center"/>
                                
                                <ItemsControl ItemsSource="{Binding CurrentCharacter.ClassLevels}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" 
                                                   Margin="0,5" Padding="15">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding ClassName}" FontSize="16" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding CharacterClass.Description}" 
                                                                  FontStyle="Italic" Foreground="#6c757d"/>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                                                        <TextBlock Text="Level:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                        <TextBox Text="{Binding Level}" Width="50" TextAlignment="Center" 
                                                                Padding="5" FontSize="14" FontWeight="Bold"/>
                                                    </StackPanel>
                                                    
                                                    <TextBlock Grid.Column="2" Text="{Binding CharacterClass.HitDie, StringFormat='Hit Die: d{0}'}" 
                                                              VerticalAlignment="Center" Margin="20,0" FontWeight="Bold"/>
                                                    
                                                    <Button Grid.Column="3" Content="Remove Class" 
                                                            Command="{Binding DataContext.RemoveClassCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#dc3545" Foreground="White" 
                                                            Padding="10,5" BorderThickness="0"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- No classes message -->
                                <TextBlock Text="No classes added yet. Add your first class below." 
                                          FontStyle="Italic" HorizontalAlignment="Center" Margin="20">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentCharacter.ClassLevels.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </GroupBox>

                        <!-- Add New Class -->
                        <GroupBox Grid.Row="2" Header="Add New Class" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Class Selection -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                    <Label Content="Select Class" FontWeight="Bold"/>
                                    <ComboBox ItemsSource="{Binding Classes}" 
                                              SelectedItem="{Binding SelectedClassToAdd}"
                                              DisplayMemberPath="Name" Padding="10" FontSize="14"/>
                                </StackPanel>

                                <!-- Level Selection -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,15,15">
                                    <Label Content="Starting Level" FontWeight="Bold"/>
                                    <TextBox Text="{Binding SelectedLevelToAdd}" 
                                            TextAlignment="Center" Padding="10" FontSize="14"/>
                                </StackPanel>

                                <!-- Add Button -->
                                <Button Grid.Row="0" Grid.Column="2" Content="Add Class" 
                                        Command="{Binding AddClassCommand}"
                                        Background="#28a745" Foreground="White" 
                                        Padding="20,10" BorderThickness="0"
                                        FontWeight="Bold" VerticalAlignment="Bottom" Margin="0,0,0,15"/>

                                <!-- Class Description -->
                                <Border Grid.Row="1" Grid.ColumnSpan="3" Background="#e9ecef" 
                                       BorderBrush="#ced4da" BorderThickness="1" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="{Binding SelectedClassToAdd.Name}" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding SelectedClassToAdd.Description}" 
                                                  TextWrapping="Wrap" Margin="0,5,0,0"/>
                                        <Grid Margin="0,10,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding SelectedClassToAdd.HitDie, StringFormat='Hit Die: d{0}'}" 
                                                      FontWeight="Bold"/>
                                            <TextBlock Grid.Column="1" Text="{Binding SelectedClassToAdd.PrimaryAbility, StringFormat='Primary Ability: {0}'}" 
                                                      FontWeight="Bold"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Total Level Summary -->
                                <Border Grid.Row="2" Grid.ColumnSpan="3" Background="#d4edda" 
                                       BorderBrush="#c3e6cb" BorderThickness="1" Padding="15" 
                                       Margin="0,15,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Total Character Level: " FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding CurrentCharacter.Level}" FontSize="20" FontWeight="Bold" 
                                                  Foreground="#155724"/>
                                        <TextBlock Text=" | Proficiency Bonus: " FontSize="16" FontWeight="Bold" Margin="20,0,0,0"/>
                                        <TextBlock Text="{Binding CurrentCharacter.ProficiencyBonus, StringFormat='+{0}'}" 
                                                  FontSize="20" FontWeight="Bold" Foreground="#155724"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Ability Scores Tab -->
            <TabItem Header="Ability Scores &amp; Skills" Padding="15,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Ability Scores" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                        <!-- Ability Scores with Racial Bonuses -->
                        <UniformGrid Grid.Row="1" Columns="3" Rows="2" Margin="0,0,0,30">
                            <!-- Strength -->
                            <Border Margin="5" Padding="15" Background="White" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Strength" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding CurrentCharacter.AbilityScores.Strength}" 
                                             FontSize="18" FontWeight="Bold" TextAlignment="Center" 
                                             Padding="8" BorderBrush="#ddd" BorderThickness="2" Width="60"/>
                                    
                                    <!-- Racial Bonus Display -->
                                    <StackPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.StrengthRacialBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Green" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Racial)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <Border BorderBrush="#ccc" BorderThickness="0,1,0,0" Margin="5,2,5,2"/>
                                        <TextBlock Text="{Binding CurrentCharacter.StrengthTotal}" 
                                                   HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding CurrentCharacter.StrengthModifier, StringFormat='Modifier: {0:+#;-#;0}'}" 
                                               HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>

                            <!-- Dexterity -->
                            <Border Margin="5" Padding="15" Background="White" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Dexterity" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding CurrentCharacter.AbilityScores.Dexterity}" 
                                             FontSize="18" FontWeight="Bold" TextAlignment="Center" 
                                             Padding="8" BorderBrush="#ddd" BorderThickness="2" Width="60"/>
                                    
                                    <!-- Racial Bonus Display -->
                                    <StackPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.DexterityRacialBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Green" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Racial)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <Border BorderBrush="#ccc" BorderThickness="0,1,0,0" Margin="5,2,5,2"/>
                                        <TextBlock Text="{Binding CurrentCharacter.DexterityTotal}" 
                                                   HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding CurrentCharacter.DexterityModifier, StringFormat='Modifier: {0:+#;-#;0}'}" 
                                               HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>

                            <!-- Constitution -->
                            <Border Margin="5" Padding="15" Background="White" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Constitution" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding CurrentCharacter.AbilityScores.Constitution}" 
                                             FontSize="18" FontWeight="Bold" TextAlignment="Center" 
                                             Padding="8" BorderBrush="#ddd" BorderThickness="2" Width="60"/>
                                    
                                    <!-- Racial Bonus Display -->
                                    <StackPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.ConstitutionRacialBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Green" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Racial)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <Border BorderBrush="#ccc" BorderThickness="0,1,0,0" Margin="5,2,5,2"/>
                                        <TextBlock Text="{Binding CurrentCharacter.ConstitutionTotal}" 
                                                   HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding CurrentCharacter.ConstitutionModifier, StringFormat='Modifier: {0:+#;-#;0}'}" 
                                               HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>

                            <!-- Intelligence -->
                            <Border Margin="5" Padding="15" Background="White" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Intelligence" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding CurrentCharacter.AbilityScores.Intelligence}" 
                                             FontSize="18" FontWeight="Bold" TextAlignment="Center" 
                                             Padding="8" BorderBrush="#ddd" BorderThickness="2" Width="60"/>
                                    
                                    <!-- Racial Bonus Display -->
                                    <StackPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.IntelligenceRacialBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Green" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Racial)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <Border BorderBrush="#ccc" BorderThickness="0,1,0,0" Margin="5,2,5,2"/>
                                        <TextBlock Text="{Binding CurrentCharacter.IntelligenceTotal}" 
                                                   HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding CurrentCharacter.IntelligenceModifier, StringFormat='Modifier: {0:+#;-#;0}'}" 
                                               HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>

                            <!-- Wisdom -->
                            <Border Margin="5" Padding="15" Background="White" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Wisdom" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding CurrentCharacter.AbilityScores.Wisdom}" 
                                             FontSize="18" FontWeight="Bold" TextAlignment="Center" 
                                             Padding="8" BorderBrush="#ddd" BorderThickness="2" Width="60"/>
                                    
                                    <!-- Racial Bonus Display -->
                                    <StackPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.WisdomRacialBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Green" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Racial)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <Border BorderBrush="#ccc" BorderThickness="0,1,0,0" Margin="5,2,5,2"/>
                                        <TextBlock Text="{Binding CurrentCharacter.WisdomTotal}" 
                                                   HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding CurrentCharacter.WisdomModifier, StringFormat='Modifier: {0:+#;-#;0}'}" 
                                               HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>

                            <!-- Charisma -->
                            <Border Margin="5" Padding="15" Background="White" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Charisma" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBox Text="{Binding CurrentCharacter.AbilityScores.Charisma}" 
                                             FontSize="18" FontWeight="Bold" TextAlignment="Center" 
                                             Padding="8" BorderBrush="#ddd" BorderThickness="2" Width="60"/>
                                    
                                    <!-- Racial Bonus Display -->
                                    <StackPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding CurrentCharacter.CharismaRacialBonus, StringFormat='{}{0:+#;-#;0}'}" 
                                                       Foreground="Green" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text=" (Racial)" Foreground="Gray" FontSize="12"/>
                                        </StackPanel>
                                        <Border BorderBrush="#ccc" BorderThickness="0,1,0,0" Margin="5,2,5,2"/>
                                        <TextBlock Text="{Binding CurrentCharacter.CharismaTotal}" 
                                                   HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding CurrentCharacter.CharismaModifier, StringFormat='Modifier: {0:+#;-#;0}'}" 
                                               HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>

                        <!-- Skill Proficiencies Section -->
                        <StackPanel Grid.Row="2">
                            <TextBlock Text="Skill Proficiencies" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                            
                            <!-- Racial Skill Proficiencies -->
                            <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Racial Skill Proficiencies" FontWeight="Bold" Margin="0,0,0,10"/>
                                    <ItemsControl ItemsSource="{Binding CurrentCharacter.RacialSkillProficiencies}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#28a745" Margin="2" Padding="5,2" CornerRadius="3">
                                                    <TextBlock Text="{Binding}" Foreground="White" FontSize="12"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                    <TextBlock Text="No racial skill proficiencies" FontStyle="Italic" Foreground="Gray" 
                                               x:Name="NoSkillsText"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Character Stats Tab -->
            <TabItem Header="Character Stats" Padding="15,10">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Combat Stats" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Armor Class" FontWeight="Bold"/>
                            <TextBox Grid.Column="1" Text="{Binding CurrentCharacter.ArmorClass}" 
                                     Width="80" Padding="5" BorderBrush="#ddd" BorderThickness="1"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Hit Points" FontWeight="Bold"/>
                            <TextBox Grid.Column="1" Text="{Binding CurrentCharacter.HitPoints}" 
                                     Width="80" Padding="5" BorderBrush="#ddd" BorderThickness="1"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Max Hit Points" FontWeight="Bold"/>
                            <TextBox Grid.Column="1" Text="{Binding CurrentCharacter.MaxHitPoints}" 
                                     Width="80" Padding="5" BorderBrush="#ddd" BorderThickness="1"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Speed" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentCharacter.Speed, StringFormat='{}{0} ft'}" 
                                       VerticalAlignment="Center" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Experience" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Experience Points" FontWeight="Bold"/>
                            <TextBox Grid.Column="1" Text="{Binding CurrentCharacter.ExperiencePoints}" 
                                     Width="100" Padding="5" BorderBrush="#ddd" BorderThickness="1"/>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Proficiency Bonus" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentCharacter.ProficiencyBonus, StringFormat='+{0}'}" 
                                       VerticalAlignment="Center" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#34495e" Padding="10">
            <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="12"/>
        </Border>
    </Grid>
</Window> 