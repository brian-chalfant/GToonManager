<Window x:Class="GToonManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GToonManager.ViewModels"
        xmlns:controls="clr-namespace:GToonManager.Controls"
        mc:Ignorable="d"
        Title="GToon Manager - Character Creator" 
        Height="800" Width="1200"
        WindowState="Maximized"
        Background="#f5f5f5">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding NewCharacterCommand}"/>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding LoadCharacterCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveCharacterCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl+Shift" Command="{Binding SaveCharacterAsCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#ecf0f1" Height="25" BorderBrush="#bdc3c7" BorderThickness="0,0,0,1">
            <MenuItem Header="_File" Padding="8,4">
                <MenuItem Header="_New Character" Command="{Binding NewCharacterCommand}" InputGestureText="Ctrl+N"/>
                <MenuItem Header="_Open Character..." Command="{Binding LoadCharacterCommand}" InputGestureText="Ctrl+O"/>
                <MenuItem Header="_Save Character" Command="{Binding SaveCharacterCommand}" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save Character _As..." Command="{Binding SaveCharacterAsCommand}" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="_Export">
                    <MenuItem Header="Export to _HTML..." Command="{Binding ExportToHtmlCommand}"/>
                    <MenuItem Header="Export to _PDF..." Command="{Binding ExportToPdfCommand}"/>
                </MenuItem>
                <MenuItem Header="_Debug">
                    <MenuItem Header="Discover PDF _Fields..." Command="{Binding DiscoverPdfFieldsCommand}"/>
                    <MenuItem Header="_Analyze PDF Structure..." Command="{Binding AnalyzePdfCommand}"/>
                    <MenuItem Header="Create _Test PDF..." Command="{Binding CreateTestPdfCommand}"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Settings..." Command="{Binding ShowSettingsCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding ExitApplicationCommand}" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="_Help" Padding="8,4">
                <MenuItem Header="_About GToon Manager..." Command="{Binding ShowAboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Header -->
        <Border Grid.Row="1" Background="#2c3e50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="GToon Manager" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,20,0"/>
                    <TextBlock Text="D and D 5E Character Creator" FontSize="14" Foreground="#bdc3c7" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="New Character" Command="{Binding NewCharacterCommand}" 
                            Background="#3498db" Foreground="White" Padding="15,8" Margin="5" 
                            BorderThickness="0" FontWeight="Bold"/>
                    <Button Content="Load Character" Command="{Binding LoadCharacterCommand}" 
                            Background="#9b59b6" Foreground="White" Padding="15,8" Margin="5" 
                            BorderThickness="0" FontWeight="Bold"/>
                    <Button Content="Save Character" Command="{Binding SaveCharacterCommand}" 
                            Background="#f39c12" Foreground="White" Padding="15,8" Margin="5" 
                            BorderThickness="0" FontWeight="Bold"/>
                    <Button Content="Export HTML" Command="{Binding ExportToHtmlCommand}" 
                            Background="#27ae60" Foreground="White" Padding="15,8" Margin="5" 
                            BorderThickness="0" FontWeight="Bold"/>
                    <Button Content="Export PDF" Command="{Binding ExportToPdfCommand}" 
                            Background="#e74c3c" Foreground="White" Padding="15,8" Margin="5" 
                            BorderThickness="0" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="2" Margin="20" Background="White">
            <!-- Basic Info Tab -->
            <TabItem Header="Basic Info" Padding="15,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Character Name -->
                        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,20">
                            <Label Content="Character Name" FontWeight="Bold" FontSize="14"/>
                            <TextBox Text="{Binding CurrentCharacter.Name}" FontSize="16" Padding="10" 
                                     BorderBrush="#ddd" BorderThickness="2"/>
                        </StackPanel>

                        <!-- Player Name -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,20">
                            <Label Content="Player Name" FontWeight="Bold"/>
                            <TextBox Text="{Binding CurrentCharacter.PlayerName}" Padding="8" 
                                     BorderBrush="#ddd" BorderThickness="1"/>
                        </StackPanel>

                        <!-- Level -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,20">
                            <Label Content="Total Level" FontWeight="Bold"/>
                            <Border Background="White" BorderBrush="#ddd" BorderThickness="1" Padding="8">
                                <TextBlock Text="{Binding CurrentCharacter.Level}" FontSize="14" FontWeight="Bold" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="(Calculated from class levels)" FontSize="10" FontStyle="Italic" 
                                      Foreground="Gray" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Race Selection -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,20">
                            <Label Content="Race" FontWeight="Bold"/>
                            <ComboBox ItemsSource="{Binding Races}" 
                                      SelectedItem="{Binding CurrentCharacter.Race}"
                                      DisplayMemberPath="Name" Padding="8" 
                                      BorderBrush="#ddd" BorderThickness="1"/>
                        </StackPanel>

                        <!-- Subrace Selection -->
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,20">
                            <Label Content="Subrace" FontWeight="Bold"/>
                            <ComboBox ItemsSource="{Binding CurrentCharacter.AvailableSubraces}" 
                                      SelectedItem="{Binding CurrentCharacter.Subrace}"
                                      DisplayMemberPath="Name" Padding="8" 
                                      BorderBrush="#ddd" BorderThickness="1"
                                      IsEnabled="{Binding CurrentCharacter.HasSubraces}"/>
                        </StackPanel>

                        <!-- Background Selection -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,20">
                            <Label Content="Background" FontWeight="Bold"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <!-- Current Background Display -->
                                <TextBlock Grid.Row="0" Text="{Binding CurrentCharacter.Background.Name, StringFormat='Current: {0}'}" 
                                          FontWeight="Bold" Margin="0,0,0,5"
                                          Visibility="{Binding CurrentCharacter.Background, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <!-- Background Selection for Change -->
                                <ComboBox Grid.Row="1" ItemsSource="{Binding Backgrounds}" 
                                          SelectedItem="{Binding CurrentCharacter.Background}"
                                          DisplayMemberPath="Name" Padding="8" 
                                          BorderBrush="#ddd" BorderThickness="1"/>
                            </Grid>
                        </StackPanel>

                        <!-- Background Ability Score Selection -->
                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,20" 
                                   Visibility="{Binding HasBackgroundAbilityScoreOptions, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Label Content="Background Ability Scores" FontWeight="Bold"/>
                            <Border BorderBrush="#ddd" BorderThickness="1" Padding="10" Background="White">
                                <StackPanel>
                                    <!-- Current Character Background Display -->
                                    <TextBlock Text="{Binding CurrentCharacter.Background.Name, StringFormat='Current: {0}'}" 
                                              FontWeight="Bold" Margin="0,0,0,10"
                                              Visibility="{Binding CurrentCharacter.Background, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- Background Selection Info -->
                                    <TextBlock Text="{Binding SelectedBackground.Name, StringFormat='Configuring: {0}'}" 
                                              FontWeight="Bold" Margin="0,0,0,10"/>
                                    
                                    <!-- Improvement Option Selection -->
                                    <TextBlock Text="Choose ability score improvement option:" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <ComboBox ItemsSource="{Binding BackgroundAbilityScoreOptions}"
                                              SelectedItem="{Binding SelectedBackgroundImprovementOption}"
                                              DisplayMemberPath="Description" Padding="8" Margin="0,0,0,10"/>
                                    
                                    <!-- Ability Score Selections -->
                                    <StackPanel Visibility="{Binding HasBackgroundImprovementOption, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="Select ability scores to improve:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding BackgroundImprovementOptionDescription}" 
                                                  FontStyle="Italic" Margin="0,0,0,10"/>
                                        
                                        <!-- Available Ability Scores -->
                                        <TextBlock Text="Available ability scores:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <ItemsControl ItemsSource="{Binding AvailableAbilityScoresForBackground}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding}" 
                                                            Command="{Binding DataContext.AddBackgroundAbilityScoreCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#3498db" Foreground="White" 
                                                            Padding="8,4" Margin="2" BorderThickness="0"
                                                            Style="{DynamicResource {x:Static ToolBar.ButtonStyleKey}}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        
                                        <!-- Current Selections -->
                                        <TextBlock Text="Current selections:" FontWeight="Bold" Margin="0,10,0,5"/>
                                        <ItemsControl ItemsSource="{Binding BackgroundAbilityScoreSelections}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" 
                                                           Margin="0,2" Padding="8">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                                                                                         <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                                 <TextBlock Text="{Binding AbilityScore}" FontWeight="Bold"/>
                                                                 <TextBlock Text=" +" Margin="5,0,0,0"/>
                                                                 <TextBlock Text="{Binding Improvement}" FontWeight="Bold"/>
                                                             </StackPanel>
                                                            <Button Grid.Column="1" Content="Remove"
                                                                    Command="{Binding DataContext.RemoveBackgroundAbilityScoreCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    Background="#e74c3c" Foreground="White" 
                                                                    Padding="5,2" BorderThickness="0"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        
                                        <!-- Apply Button -->
                                        <Button Content="Apply Background" 
                                                Command="{Binding ApplyBackgroundCommand}"
                                                Background="#27ae60" Foreground="White" 
                                                Padding="15,8" Margin="0,15,0,0" BorderThickness="0"
                                                FontWeight="Bold" FontSize="14"
                                                IsEnabled="{Binding CanApplyBackgroundSelection}"
                                                ToolTip="Apply background to character. Uniform ability improvements will be applied automatically."/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Classes Section 
                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,20">
                            <Label Content="Classes" FontWeight="Bold"/>
                            <Border BorderBrush="#ddd" BorderThickness="1" Padding="10" Background="White">
                                <StackPanel>-->
                                    <!-- Current Classes List
                                    <TextBlock Text="Current Classes:" FontWeight="Bold" Margin="0,0,0,5"/>
